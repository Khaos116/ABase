<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="BaseAppTheme">

  </style>
  <!-- 启动页风格 -->
  <style name="SplashTheme" parent="AppTheme">
    <item name="android:windowBackground">@drawable/fit_splash_bg</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <!--透明Activity-->
  <style name="TransActivityTheme" parent="AppTheme">
    <item name="android:windowFrame">@null</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <!-- 是否浮现在activity之上 -->
    <!-- 半透明 -->
    <item name="android:windowIsTranslucent">true</item>
    <!-- 无标题 -->
    <item name="android:windowNoTitle">true</item>
    <!-- 背景透明 -->
    <item name="android:windowBackground">@android:color/transparent</item>
    <!-- 是否允许对话框的背景变暗 -->
    <item name="android:backgroundDimEnabled">true</item>
    <!--填充状态栏，否则导致键盘弹起问题-->
    <item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />

  <style name="CollapsingTextAppearance.Inverse">
    <item name="android:textSize">21sp</item>
    <item name="android:textColor">@color/black</item>
  </style>
  <!-- 自定义Dialog动画 -->
  <style name="BottomDialogAnimation">
    <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
    <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
  </style>

  <style name="CollapsingTextAppearance.Black17">
    <item name="android:textSize">17sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="CollapsingTextAppearance.White21">
    <item name="android:textSize">21sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="FloatWindowAnimation">
    <item name="android:windowEnterAnimation">@anim/anim_float_window_enter</item>
    <item name="android:windowExitAnimation">@anim/anim_float_window_exit</item>
  </style>
</resources>
