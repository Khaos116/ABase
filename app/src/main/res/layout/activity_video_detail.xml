<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <View
      android:id="@+id/videoDetailStatus"
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="@color/black"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <cc.abase.demo.widget.video.view.ExoVideoView
      android:id="@+id/videoDetailVideoView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:corner_radius="0dp"
      app:layout_constraintDimensionRatio="16:9"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/videoDetailStatus"
      />

  <com.airbnb.epoxy.EpoxyRecyclerView
      android:id="@+id/videoDetailRecycler"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/videoDetailVideoView"
      />
</androidx.constraintlayout.widget.ConstraintLayout>