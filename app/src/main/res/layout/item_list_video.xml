<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/itemVideoListTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="12dp"
      android:paddingTop="10dp"
      android:paddingEnd="12dp"
      android:paddingBottom="10dp"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="这是第1个视频"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="#1a1a1a"
      app:layout_constraintDimensionRatio="16:9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/itemVideoListTitle"
      >
    <!--封面-->
    <ImageView
        android:id="@+id/itemPlayPagerThumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        />
    <!--播放按钮-->
    <ImageView
        android:id="@+id/itemPlayPagerBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_primary"
        android:contentDescription="@null"
        android:padding="8dp"
        android:src="@drawable/dkplayer_ic_action_play_arrow"
        />
  </FrameLayout>

  <FrameLayout
      android:id="@+id/itemVideoContainer"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintDimensionRatio="16:9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/itemVideoListTitle"
      />
</androidx.constraintlayout.widget.ConstraintLayout>