<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="DiscreteBanner">
    <attr name="dsv_orientation" format="enum">
      <enum name="horizontal" value="0"/>
      <enum name="vertical" value="1"/>
    </attr>
  </declare-styleable>
  <declare-styleable name="DotsIndicator">
    <attr name="dots_count" format="integer"/>
    <attr name="selected_dot_scale_factor" format="float"/>
    <attr name="selected_dot_resource" format="reference"/>
    <attr name="unselected_dot_resource" format="reference"/>
    <attr name="first_selected_dot_resource" format="reference"/>
    <attr name="first_unselected_dot_resource" format="reference"/>
    <attr name="dot_size" format="dimension"/>
    <attr name="last_dot_size" format="dimension"/>
    <attr name="margins_between_dots" format="dimension"/>
  </declare-styleable>

  <!--圆角控件-->
  <attr name="corner_radius" format="dimension"/>
  <declare-styleable name="GeneralRoundLinearLayout">
    <attr name="corner_radius"/>
  </declare-styleable>
  <declare-styleable name="GeneralRoundRelativeLayout">
    <attr name="corner_radius"/>
  </declare-styleable>
  <declare-styleable name="GeneralRoundFrameLayout">
    <attr name="corner_radius"/>
  </declare-styleable>
  <declare-styleable name="GeneralRoundConstraintLayout">
    <attr name="corner_radius"/>
  </declare-styleable>

  <declare-styleable name="DrawableTextView">
    <attr name="drawableTLeftWidth" format="dimension"/>
    <attr name="drawableTLeftHeight" format="dimension"/>
    <attr name="drawableTRightWidth" format="dimension"/>
    <attr name="drawableTRightHeight" format="dimension"/>
    <attr name="drawableTTopWidth" format="dimension"/>
    <attr name="drawableTTopHeight" format="dimension"/>
    <attr name="drawableTBottomWidth" format="dimension"/>
    <attr name="drawableTBottomHeight" format="dimension"/>
  </declare-styleable>

  <declare-styleable name="DrawableEditText">
    <attr name="drawableELeftWidth" format="dimension"/>
    <attr name="drawableELeftHeight" format="dimension"/>
    <attr name="drawableERightWidth" format="dimension"/>
    <attr name="drawableERightHeight" format="dimension"/>
    <attr name="drawableETopWidth" format="dimension"/>
    <attr name="drawableETopHeight" format="dimension"/>
    <attr name="drawableEBottomWidth" format="dimension"/>
    <attr name="drawableEBottomHeight" format="dimension"/>
  </declare-styleable>

  <!-- 圆形图片 -->
  <style name="ShapeCircleImageStyle">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
  </style>

  <!--圆角ConstraintLayout(可以单独设置每个角，但是不抗锯齿，如果四个角一致，使用GeneralRoundConstraintLayout即可)-->
  <declare-styleable name="RoundConstraintLayout">
    <attr name="corner" format="dimension"/>
    <attr name="leftTopCorner" format="dimension"/>
    <attr name="rightTopCorner" format="dimension"/>
    <attr name="leftBottomCorner" format="dimension"/>
    <attr name="rightBottomCorner" format="dimension"/>
  </declare-styleable>

  <!--ShapeOfView-->
  <declare-styleable name="ShapeOfView">
    <attr name="shape_clip_drawable" format="reference"/>
  </declare-styleable>
  <declare-styleable name="RoundRectView">
    <attr name="shape_roundRect_topLeftRadius" format="dimension"/>
    <attr name="shape_roundRect_topRightRadius" format="dimension"/>
    <attr name="shape_roundRect_bottomLeftRadius" format="dimension"/>
    <attr name="shape_roundRect_bottomRightRadius" format="dimension"/>
    <attr name="shape_roundRect_borderWidth" format="dimension"/>
    <attr name="shape_roundRect_borderColor" format="color"/>
  </declare-styleable>
</resources>