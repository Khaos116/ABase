<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item
    android:left="-300dp"
    android:right="-300dp">
    <rotate android:fromDegrees="90">
      <shape android:shape="line">
        <stroke
          android:width="1dp"
          android:color="@color/red"
          android:dashWidth="4dp"
          android:dashGap="2dp" />
      </shape>
    </rotate>
  </item>
</layer-list>